<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/display_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text=" Enter Max time"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/hours"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_below="@+id/display_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:hint="hours"
        android:inputType="textPersonName|textCapWords"
        android:padding="10dp"
        android:text="0" />

    <EditText
        android:id="@+id/min"
        android:layout_width="150dp"
        android:layout_height="50sp"
        android:layout_below="@+id/display_text"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/hours"
        android:hint="min"
        android:inputType="textPersonName"
        android:text="0" />

    <Button
        android:id="@+id/set_timer_btn"
        android:layout_width="150dp"
        android:layout_height="50sp"
        android:layout_below="@+id/timer_status"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="-133dp"
        android:layout_marginBottom="158dp"
        android:text="Set" />

    <TextView
        android:id="@+id/timer_status"

        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/min"
        android:layout_marginTop="115dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="50sp"
        android:layout_below="@+id/timer_status"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="158dp"

        android:text="Start" />

    <Button
        android:id="@+id/reset"
        android:layout_width="150dp"
        android:layout_height="50sp"
        android:layout_below="@id/timer_status"
        android:layout_alignLeft="@+id/button"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="158dp"
        android:text="Reset" />

</RelativeLayout>